pipeline{
    agent{
        label "node"
    }
    stages{
        stage("Checkout code"){
            steps{
                checkout scm
            }
        }

        stage("Setting up Noje.js"){
            steps{
                bat 'node -v'
            }
        }

        stage("Install dependencies"){
            steps{
                bat 'npm install'
            }
        }

        stage("Starting the application"){
            steps{
                bat 'npm start &'
            }
        }

        stage("Running tests"){
            steps{
                bat 'npm test'
            }
        }
    }
}
